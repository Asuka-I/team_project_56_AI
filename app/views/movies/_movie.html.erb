<div class="card-box col-12 col-md-6 col-lg-4">
  <div class="card border-dark mb-3">
    <div class="card-header p-0">
      <div class="embed-responsive embed-responsive-16by9">
        <%= embed_youtube(movie.url)%>
      </div>
    </div>
    <div class="card-body text-dark movie-body">
      <% if movie.watched_by?(current_user) %>
        <a class="btn btn-primary btn-block mb-1"><%= link_to "視聴済を解除", movie_watch_progresses_path(movie), method: :delete %></a>
      <% else %>
        <a class="btn btn-secondary btn-block mb-1"><%= link_to "視聴済にする", movie_watch_progresses_path(movie), method: :post %></a>
      <% end %>
      <p class="card-text movie-title mt-3 mb-3">Lv.<%= movie_counter + 1 %> : <%= movie.title %></p>
    </div>
  </div>
</div>
